\section{Sequences of functions}
\subsection{Convergence of a sequence of functions}

\begin{definition}
  
  Let $D$ be a subset (non-empty) of $\R$, if we denote by (fancy) $\mathcal{F}(D,\R)$ the $\R$ vector space of real functions from $D \to \R$.

  A sequence of functions over $D$ is a sequence in $\mathcal{F}(D,R)$ that is :

  \[ \N \to \mathcal{F}(D,\R)\quad , \text{which is often denoted}\]
  \[ n \mapsto f_n:
    \begin{aligned}
    \begin{cases}
     D \to \R \\
     x \mapsto f_n(x)
    \end{cases}
    \end{aligned}
  , \text{by $(f_n)$ or $(f_n)_{n \in \N}$}
\]
\end{definition}

\begin{definition}

   Let $(f_n)$ be a sequence of functions over $D$; we
   say that $(f_n)$ positive convergente, or simply 
   converges to $f \in \mathcal{F} \to (D, \R)$, if :

   \[ \forall x \in D; \lim\limits_{n \to + \infty}f_n(x) = f(x) \text{ or } (f_n) \xrightarrow{\text{ponctually converge}} f\]
   \[ \Leftrightarrow \lim\limits_{n \to + \infty} f_n = f\]

   \[
     \forall x\in D, (\forall \epsilon > 0; \exists N = N(\epsilon,x) : \forall n \geq \N : \forall n \in \N ,
     | f_n(x) - f(x)| < \epsilon)
   \]
\end{definition}

\begin{example}
...
\begin{center}
\includegraphics[width=0.8\textwidth]{geometric_sequence.jpg}
\end{center}
\end{example}

\begin{definition}
  \underline{Uniform convergence}

  We say that $(f_n) \xrightarrow[D]{C.v} f$ if ;  
  $\forall_n\in\N$; ($f_n - f$) is bounded over $D$ and 
  $\lim\limits_{n \to + \infty} (sup_D |f_n -f |) = 0$

  $\Leftrightarrow \epsilon > 0, \exists N = N(\epsilon) \mid \forall n \geq N, \forall x \in D,|f_n(x) -f(x) < \epsilon| $
\end{definition}

\textbf{Remark:} $(f_n) \xrightarrow[D]{C.V} f \implies (f_n) \xrightarrow[D]{P.V}f$ 

