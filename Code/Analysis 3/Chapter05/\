\subsection{Properties of uniformly convergent sequences of functions}
\begin{theorem} (continuity)

  If 
\[
  \begin{aligned}
    \begin{cases}
      \exists N \in \N \mid \forall \geq N \quad f_n \text{ continuous on $D$} \\
      \text{ and $(f_n) \xrightarrow[D]{C.V} f$} \\
    \end{cases}
    \text{then $f$ is continuous}
  \end{aligned}
\] 
\[
  \begin{aligned}
    \forall x_0 \in D; \lim\limits_{x \to x_0} f(x) &= \lim\limits_{x \to x_0} (\lim\limits_{x \to x_0} f_n(x) ) \\
                                                    &=\lim\limits_{x \to x_0}(\lim\limits_{x \to x_0} )  = f(x_0)
  \end{aligned}
\]
\end{theorem}

\textbf{Remark:}
if $(f_n) \xrightarrow[D]{P.C} f\text{ and }(x_n) \subset D \mid \lim\limits_{x \to + \infty}\left[f_n(x_n) - f(x_n)\right] \neq 0 $ then  $(f_n)_{n \in \N}$ does not unifromly convergent to $f$ on $D$ because :
\[
  (f_n) \xrightarrow[D]{C.V} f \implies \forall (x_n) \subset D : \lim\limits_{x \to + \infty}\left[f_n(x_n) - f(x_n)\right] = 0  
\]
\begin{example}
..
\begin{center}
\includegraphics[width=0.8\textwidth]{4_1_2_ex01.jpg}
\end{center}
\end{example}

\begin{theorem} \underline{ (integrability)}

  if $f_n : \left[a,b\right] \to \R$ is Riemann-integrable, $\forall n \in N$ and 
  $(f_n) \xrightarrow[D]{C.V} f$; then :
  \[
    \lim\limits_{n \to + \infty} \int_a^b f_n(x)dx = \int_a^b f(x)dx = \int_a^b (\lim\limits_{n \to + \infty}f_n(x))dx
  \]
\end{theorem}
\textbf{proof:}

\[
  \begin{aligned}
    |\int_a^b f_n(x)dx - \int_a^b f(x) dx| &= |\int_a^b (f_n(x) -f(x))dx| \\
                                           & \leq \int_a^b |f_n(x) -f(x)| dx \\
                                           & \leq (sup_{\left[a,b\right]}(f_n -f))(b-a) \xrightarrow[n \to +\infty]{}      0
  \end{aligned}
\]

